[user]
	name = Gautam Dey
	email = gautam.dey77@gmail.com

[core]
	editor = vim
  excludesfiles = ~/.gitignore_global

[merge]
	tool = vimdiff

[alias]
   headless-branch = !sh -c 'git symbolic-ref HEAD "refs/heads/$0" && rm .git/index && git clean -fdx'
   aliases = !sh -c 'git config --get-regexp \"^alias\\.\" | cut -d \" \" -f 1 | cut -d \".\" -f 2 '
   branches = branch -a 
   stat = status
   dcommit = svn dcommit
   sco = svn clone 


[color]
	sh = auto
